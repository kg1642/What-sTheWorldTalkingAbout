      <style>
          html, body{
              padding: 0;
              margin: 0;
              box-sizing: border-box;
              font-family: Helvetica, Calibri, Roboto, Open Sans, sans-serif;
              /*overflow: hidden;*/
              -webkit-backface-visibility: hidden;
          }
          body::after{
              background: url('images/background9.jpg') no-repeat center top;
              content: "";
              opacity: 0.5;
              position: absolute;
              top: 0;
              bottom: 0;
              right: 0;
              left: 0;
              z-index: -1;
              background-size: cover;
          }
          .glyphicon {
              font-size: 30px;
          }
          #img.source-image {
              width: 100%;
              position: absolute;
              top: 0;
              left: 0;
          }
          * {
              box-sizing: inherit;
          }

          .nyt-image {
              height: 50px;
              width : 50px;
          }
          h1 {
              font-family: 'Special Elite', cursive;
              font-size: 50px;
              word-wrap: break-word;
              text-align: center;
          }
          h2 {
              font-family: 'Special Elite', cursive;
              font-size: 20px;
              word-wrap: break-word;
              text-align: center;
          }
          svg {
              margin-left: 10%;
              margin-top: -2%;
              display:block;
              stroke-opacity:0;
          }
          .titleBox {
              color: white;
          }
          .circle-overlay {
              font-size: 16px;
              /*border-radius: 100%;*/
              position: absolute;
              color: white;
              /*it's buggy with the foreignObject background right now*/
              /*background-color: rgba(255,255,255,0.5);*/
          }

          .circle-overlay__inner {
              /*border-radius: 100%;*/
              text-align: center;
              width: 100%;
              height: 100%;
              vertical-align: middle;
              overflow:scroll;
              font-size:20px;
              font-weight:bold;
              font-family: 'Annie Use Your Telescope';
          }

          .circle-overlay__title{
              font-size : 25px;
          }
          .hidden {
              display: none;
          }
          .node-icon--faded {
              opacity: 0.3;
          }
          .legend-size circle {
              fill: rgb(31, 119, 180);
          }
      </style>

  </head>
